<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:paddingStart="8dp"
  android:paddingEnd="8dp"
  android:orientation="horizontal"
  android:layout_alignParentTop="true"
  android:showDividers="none">

  <TextView
    android:id="@+id/recipe_step_tag"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/step_tag"
    app:layout_constraintEnd_toStartOf="@id/recipe_step_number"/>

  <TextView
    android:id="@+id/recipe_step_number"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text=""
    app:layout_constraintEnd_toStartOf="@id/recipe_step"/>

  <TextView
    android:id="@+id/recipe_step"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/recipe_step_number"
    app:layout_constraintEnd_toStartOf="parent">
  </TextView>

