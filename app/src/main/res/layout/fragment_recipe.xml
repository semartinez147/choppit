<?xml version="1.0" encoding="utf-8"?>

<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <import type="android.view.View"/>
    <variable
      name="recipe"
      type="com.semartinez.projects.choppit.model.entity.Recipe"/>
    <variable
      name="ingredient"
      type="com.semartinez.projects.choppit.model.entity.Ingredient"/>
    <variable
      name="step"
      type="com.semartinez.projects.choppit.model.entity.Step"/>
    <variable
      name="bindViewModel"
      type="com.semartinez.projects.choppit.viewmodel.MainViewModel"/>
    <variable
      name="uiController"
      type="com.semartinez.projects.choppit.controller.ui.cookbook.RecipeFragment"/>
    <variable
      name="ingredientRecycler"
      type="com.semartinez.projects.choppit.view.IngredientRecyclerAdapter"/>
    <variable
      name="stepRecycler"
      type="com.semartinez.projects.choppit.view.StepRecyclerAdapter"/>
  </data>

<ScrollView
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/recipe_container">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/small_logo"
    android:layout_width="@dimen/icon_size"
    android:layout_height="@dimen/icon_size"
    android:layout_marginTop="@dimen/wide_space"
    android:layout_marginBottom="@dimen/medium_space"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    android:contentDescription="@string/logo"
    android:elevation="@dimen/wide_space"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/recipe_title"
    app:srcCompat="@drawable/ic_icon"
    />

    <TextView
      android:id="@+id/recipe_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TextAppearance.AppCompat.Display1"
      android:text="@{recipe.title}"
      app:layout_constraintTop_toBottomOf="@id/small_logo"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:id="@+id/recipe_url"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
      android:text="@{recipe.url}"
      android:visibility="@{recipe.url == null ? View.GONE : View.VISIBLE}"
      app:layout_constraintTop_toBottomOf="@id/recipe_title"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:id="@+id/recipe_ingredient_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/narrow_space"
      android:layout_marginTop="@dimen/medium_space"
      android:layout_marginBottom="@dimen/narrow_space"
      style="@style/RecipeItem.Header"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/recipe_ingredient_list"
      app:layout_constraintTop_toBottomOf="@id/recipe_url"
      android:text="@string/ingredients"
      />
    <RelativeLayout
      android:id="@+id/recipe_ingredient_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/recipe_ingredient_header"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_ingredient_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"/>
    </RelativeLayout>
    <TextView
      android:id="@+id/recipe_step_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/RecipeItem.Header"
      android:layout_marginStart="@dimen/narrow_space"
      android:layout_marginTop="@dimen/medium_space"
      android:layout_marginBottom="@dimen/narrow_space"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/recipe_step_list"
      app:layout_constraintTop_toBottomOf="@id/recipe_ingredient_list"
      android:text="@string/instructions"
      />
    <RelativeLayout
      android:id="@+id/recipe_step_list"
      android:layout_height="match_parent"
      android:layout_width="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/recipe_step_header"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_step_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/narrow_space"
        android:nestedScrollingEnabled="false"/>
    </RelativeLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</layout>