<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_map"
  app:startDestination="@+id/navigation_home">

  <fragment
    android:id="@+id/navigation_home"
    android:label="@string/title_home"
    android:name="com.semartinez.projects.choppit.controller.ui.home.HomeFragment"
    tools:layout="@layout/fragment_home">
    <action
      android:id="@+id/home_load"
      app:destination="@id/navigation_loading"/>
    <action
      android:id="@+id/home_edit"
      app:destination="@id/navigation_editing"/>
    <action
      android:id="@+id/home_cook"
      app:destination="@id/navigation_cookbook"/>
  </fragment>

  <fragment
    android:id="@+id/navigation_loading"
    android:label="@string/loading"
    android:name="com.semartinez.projects.choppit.controller.ui.editing.LoadingFragment"
    tools:layout="@layout/fragment_loading">
    <argument
      android:name="url"
      app:argType="string"
      android:defaultValue=""/>
    <argument
      android:name="ingredient"
      app:argType="string"
      android:defaultValue=""/>
    <argument
      android:name="instruction"
      app:argType="string"
      android:defaultValue=""/>
    <argument
      android:name="from"
      app:argType="string"
      android:defaultValue=""/>
    <action
      android:id="@+id/load_sel"
      app:popUpTo="@id/navigation_home"
      app:destination="@id/navigation_selection"/>
    <action
      android:id="@+id/load_edit"
      app:destination="@id/navigation_editing"
      app:popUpTo="@id/navigation_selection"/>
  </fragment>

  <fragment
    android:id="@+id/navigation_selection"
    android:label="@string/title_selection"
    android:name="com.semartinez.projects.choppit.controller.ui.editing.SelectionFragment"
    tools:layout="@layout/fragment_selection">
    <argument
      android:name="html"
      app:argType="string"
      android:defaultValue=""/>
    <action
      android:id="@+id/sel_load"
      app:destination="@id/navigation_loading"/>
  </fragment>

  <fragment
    android:id="@+id/navigation_editing"
    android:label="@string/title_editing"
    android:name="com.semartinez.projects.choppit.controller.ui.editing.EditingFragment"
    tools:layout="@layout/fragment_editing">
    <argument
      android:name="recipeId"
      app:argType="long"
      android:defaultValue="0L"/>
    <action
      android:id="@+id/edit_sel"
      app:destination="@id/navigation_selection"/>
    <action
      android:id="@+id/edit_cook"
      app:destination="@id/navigation_cookbook"
      app:popUpTo="@id/navigation_home"/>
  </fragment>

    <fragment
    android:id="@+id/navigation_cookbook"
    android:label="@string/cookbook"
    android:name="com.semartinez.projects.choppit.controller.ui.cookbook.CookbookFragment"
    tools:layout="@layout/fragment_cookbook">
      <action
        android:id="@+id/cook_rec"
        app:destination="@id/navigation_recipe"/>
      <action
        android:id="@+id/cook_edit"
        app:destination="@id/navigation_editing"/>
    </fragment>

  <fragment
    android:id="@+id/navigation_recipe"
    android:label="@string/recipe"
    android:name="com.semartinez.projects.choppit.controller.ui.cookbook.RecipeFragment"
    tools:layout="@layout/fragment_recipe">
    <argument
      android:name="recipeId"
      app:argType="long"
      android:defaultValue="0L"/>
  </fragment>
  <action
    android:id="@+id/rec_edit"
    app:destination="@id/navigation_editing"/>

</navigation>