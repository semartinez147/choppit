<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="RecipeItem" parent="AppTheme">
    <item name="android:textSize">@dimen/list_item_text_size</item>
    <item name="android:layout_margin">@dimen/list_content_spacing</item>
  </style>

  <style name="RecipeItem.Container" parent="RecipeItem">
    <item name="cardCornerRadius">@dimen/list_item_radius</item>
    <item name="android:layout_margin">@dimen/list_item_spacing</item>
  </style>

  <style name="RecipeItem.Title" parent="RecipeItem">
    <item name="android:textSize">@dimen/list_item_title_size</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="RecipeText" parent="">
    <item name="android:fontFamily">default</item>
    <item name="android:letterSpacing">0.05</item>
  </style>

  // TODO figure out how to add fonts
  <style name="RecipeText.Georgia" parent = "RecipeText">
    <item name="android:fontFamily">Georgia</item>
  </style>

  <style name="RecipeText.Quicksand" parent = "RecipeText">
    <item name="android:fontFamily">Quicksand</item>
  </style>

  <style name="RecipeText.Helvetica" parent = "RecipeText">
    <item name="android:fontFamily">Helvetica Neue</item>
  </style>
</resources>
