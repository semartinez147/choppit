<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorOnPrimarySurface">@color/colorOnPrimarySurface</item>
  </style>

  <style name="RecipeItem" parent="AppTheme">
    <item name="android:fontFamily">@font/droid_sans</item>
  </style>

  <style name="RecipeItem.Title" parent="RecipeItem">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="RecipeItem.Url" parent="RecipeItem">
    <item name="android:textSize">10sp</item>
    <item name="android:textStyle">italic</item>
  </style>

<style name="RecipeItem.Header" parent = "RecipeItem">
  <item name="android:textSize">18sp</item>
  <item name="android:textStyle">italic</item>
  <item name="android:textColor">@color/colorDark</item>
</style>

  <style name="RecipeItem.Text" parent="RecipeItem">
    <item name="android:textSize">@dimen/font14sp</item>
    <item name="android:lineSpacingExtra">6sp</item>
    <item name="android:textColor">@color/colorDark</item>
  </style>

  <style name="Droid">
    <item name="fontFamily">@font/droid_sans</item>
  </style>

  <style name="Lato">
    <item name="fontFamily">@font/lato</item>
  </style>

  <style name="Lora">
    <item name="fontFamily">@font/lora</item>
  </style>

  <style name="Quicksand">
    <item name="fontFamily">@font/quicksand</item>
  </style>

  <style name="Roboto">
    <item name="fontFamily">@font/roboto_slab</item>
  </style>

</resources>
