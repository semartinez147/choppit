<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorOnPrimarySurface">@color/colorOnPrimarySurface</item>
  </style>

  <style name="RecipeItem" parent="AppTheme">
    <item name="android:textSize">@dimen/list_item_text_size</item>
    <item name="android:layout_margin">@dimen/list_content_spacing</item>
  </style>

  <style name="RecipeItem.Title" parent="RecipeItem">
    <item name="android:textSize">@dimen/list_item_title_size</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="RecipeText" parent="">
    <item name="android:fontFamily">default</item>
    <item name="android:letterSpacing">0.05</item>
  </style>

</resources>
