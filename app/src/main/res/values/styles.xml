<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorOnPrimarySurface">@color/colorOnPrimarySurface</item>
  </style>

  <style name="RecipeItem" parent="AppTheme">
    <item name="android:fontFamily">@font/droid_sans</item>
  </style>

  <style name="RecipeItem.Title" parent="RecipeItem">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="RecipeItem.Url" parent="RecipeItem">
    <item name="android:textSize">10sp</item>
    <item name="android:textStyle">italic</item>
  </style>

<style name="RecipeItem.Header" parent = "RecipeItem">
  <item name="android:textSize">18sp</item>
  <item name="android:textStyle">italic</item>
</style>

  <style name="RecipeItem.Text" parent="RecipeItem">
    <item name="android:textSize">14sp</item>
    <item name="android:lineSpacingExtra">6sp</item>
  </style>

</resources>
